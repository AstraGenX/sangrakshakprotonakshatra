/* Footer Styles */
.footer {
    background: #0d0d0d;
    color: #fff;
    padding: 50px 20px;
    text-align: center;
    position: relative;
}

/* Footer Container */
.footer-container {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    max-width: 1100px;
    margin: auto;
    text-align: left;
}

.footer-about {
    max-width: 400px;
}

.footer-logo {
    font-size: 1.5rem;
    display: flex;
    align-items: center;
    gap: 8px;
}

.footer-logo i {
    color: #ffb400;
}

.footer-about p {
    font-size: 0.9rem;
    opacity: 0.8;
    margin: 10px 0;
}

.social-icons {
    display: flex;
    gap: 15px;
    margin-top: 15px;
}

.social-icons a {
    color: #fff;
    font-size: 1.2rem;
    transition: 0.3s;
}

.social-icons a:hover {
    color: #ffb400;
}

/* Footer Links */
.footer-links {
    display: flex;
    flex-direction: column;
    gap: 8px;
}

.footer-links h3 {
    font-size: 1.2rem;
    margin-bottom: 10px;
}

.footer-links a {
    color: #bbb;
    text-decoration: none;
    font-size: 0.9rem;
    transition: 0.3s;
}

.footer-links a:hover {
    color: #ffb400;
}

/* Footer Bottom */
.footer-bottom {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    margin-top: 40px;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
    padding-top: 20px;
    font-size: 0.9rem;
}

.footer-policy {
    display: flex;
    gap: 15px;
}

.footer-policy a {
    color: #bbb;
    text-decoration: none;
    transition: 0.3s;
}

.footer-policy a:hover {
    color: #ffb400;
}

/* Scroll to Top Button */
.scroll-top {
    position: fixed;
    bottom: 20px;
    right: 20px;
    background: #8000ff;
    color: #fff;
    border: none;
    padding: 12px 14px;
    border-radius: 50%;
    font-size: 1.2rem;
    cursor: pointer;
    transition: 0.3s;
}

.scroll-top:hover {
    background: #5700b3;
}

