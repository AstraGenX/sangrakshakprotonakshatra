    <style>
        /* GENERAL STYLES */
body {
    margin: 0;
    font-family: 'Orbitron', sans-serif;
    background: #0d0d0d;
    color: #fff;
    text-align: center;
}

/* HEADER */
.header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 40px;
    background: #111;
    position: fixed;
    width: 100%;
    top: 0;
    z-index: 1000;
}

/* LOGO */
.logo {
    font-size: 1.5rem;
    font-weight: bold;
    display: flex;
    align-items: center;
    gap: 8px;
    color: white;
}

.logo i {
    color: #ffb400;
}

/* NAVIGATION (DESKTOP) */
.nav-links {
    display: flex;
    gap: 20px;
}

.nav-links a {
    text-decoration: none;
    color: #fff;
    font-size: 1rem;
    transition: 0.3s;
}

.nav-links a:hover {
    color: #ffb400;
}

/* Desktop Button */
.desktop-btn {
    display: block;
}

/* PRIMARY BUTTON */
.btn-primary {
    background: #ff9800;
    color: #111;
    border: none;
    padding: 10px 20px;
    font-size: 1rem;
    cursor: pointer;
    border-radius: 5px;
    transition: 0.3s;
}

.btn-primary:hover {
    background: #e68900;
}

/* MOBILE MENU TOGGLE */
.menu-toggle {
    display: none;
    font-size: 1.8rem;
    cursor: pointer;
    color: #fff;
}

/* MOBILE MENU (Hidden by Default) */
.mobile-menu {
    display: none;
    position: absolute;
    top: 60px;
    right: 0;
    width: 100%;
    background: #111;
    flex-direction: column;
    align-items: center;
    padding: 20px;
    transition: all 0.3s ease-in-out;
}

/* Show menu when active */
.mobile-menu.active {
    display: flex;
}

.mobile-menu a {
    text-decoration: none;
    color: #fff;
    padding: 12px;
    width: 100%;
    text-align: center;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
}

/* RESPONSIVE DESIGN */
@media (max-width: 900px) {
    .nav-links {
        display: none;
    }

    .menu-toggle {
        display: block;
    }

    .desktop-btn {
        display: none;
    }
}



/* HERO SECTION */
.hero {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    padding: 80px 20px; /* Reduced padding */
    min-height: 100vh;
    background-image: url('grid-pattern.png');
    background-size: cover;
    background-position: center;
}

/* HERO CONTENT */
.hero-content {
    max-width: 600px;
}

.hero-content h1 {
    font-size: 2.8rem; /* Slightly reduced for better fit */
    font-weight: bold;
    margin: 0;
}

.hero-content h1 span {
    color: #ffb400;
}

.hero-content h2 {
    font-size: 1.6rem;
    margin-top: -5px;
    color: #ffb400;
}

.hero-content p {
    font-size: 1rem;
    opacity: 0.8;
    margin: 15px 0;
}

/* BUTTONS */
.buttons {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 15px;
    flex-wrap: wrap;
    margin-top: 20px;
}

.btn-primary, .btn-secondary {
    padding: 12px 24px;
    font-size: 1rem;
    cursor: pointer;
    border-radius: 5px;
    transition: 0.3s;
}

.btn-secondary {
    background: transparent;
    color: #ffb400;
    border: 2px solid #ffb400;
}

.btn-secondary:hover {
    background: #ffb400;
    color: #111;
}

/* HERO IMAGE */
.hero-image {
    display: flex;
    justify-content: center;
    margin-top: 30px;
}

.hero-image img {
    max-width: 350px;
}

/* RESPONSIVE DESIGN */
@media (max-width: 900px) {
    .hero {
        padding: 60px 20px; /* Further reduced padding for small screens */
    }

    .hero-content h1 {
        font-size: 2.4rem;
    }

    .hero-content h2 {
        font-size: 1.4rem;
    }

    .hero-image img {
        max-width: 280px;
    }

    .buttons {
        flex-direction: column;
    }
}




/* Features Section */
.features {
    text-align: center;
    padding: 80px 20px;
    background-color: #0d0d0d;
    color: #fff;
}

.features-header {
    max-width: 700px;
    margin: 0 auto 40px;
}

.highlight-text {
    display: inline-block;
    background: rgba(255, 180, 0, 0.2);
    color: #ffb400;
    padding: 6px 12px;
    font-size: 0.9rem;
    border-radius: 5px;
    font-weight: bold;
    text-transform: uppercase;
}

.features-header h2 {
    font-size: 2.5rem;
    margin: 10px 0;
    color: #fff;
}

.features-header p {
    font-size: 1.2rem;
    opacity: 0.8;
}

/* Feature Grid */
.features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 20px;
    max-width: 1100px;
    margin: 0 auto;
}

/* Feature Box */
.feature-box {
    background: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
    padding: 20px;
    text-align: left;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    flex-direction: column;
    align-items: flex-start;
}

.feature-box:hover {
    transform: translateY(-5px);
    box-shadow: 0px 4px 10px rgba(255, 180, 0, 0.3);
}

/* Feature Icons */
.feature-icon {
    font-size: 2rem;
    color: #ffb400;
    margin-bottom: 10px;
}

.feature-box h3 {
    font-size: 1.4rem;
    color: #fff;
    margin-bottom: 10px;
}

.feature-box p {
    font-size: 1rem;
    opacity: 0.8;
}

/* Responsive Design */
@media (max-width: 768px) {
    .features-header h2 {
        font-size: 2rem;
    }

    .features-header p {
        font-size: 1.1rem;
    }

    .features-grid {
        grid-template-columns: 1fr;
    }
}


/* Real-Time Monitoring Section */
.realtime-monitoring {
    text-align: center;
    padding: 80px 20px;
    background-color: #0d0d0d;
    color: #fff;
}

.monitoring-header {
    max-width: 700px;
    margin: 0 auto 40px;
}

.highlight-text {
    display: inline-block;
    background: rgba(255, 180, 0, 0.2);
    color: #ffb400;
    padding: 6px 12px;
    font-size: 0.9rem;
    border-radius: 5px;
    font-weight: bold;
    text-transform: uppercase;
}

.monitoring-header h2 {
    font-size: 2.5rem;
    margin: 10px 0;
}

.monitoring-header p {
    font-size: 1.2rem;
    opacity: 0.8;
}

/* Bot Activity Tracker */
.bot-activity {
    background: rgba(255, 255, 255, 0.05);
    padding: 20px;
    border-radius: 10px;
    text-align: left;
    max-width: 900px;
    margin: 0 auto;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.bot-activity-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 10px;
}

.time-filters {
    display: flex;
    gap: 10px;
}

.time-btn {
    background: transparent;
    color: #fff;
    border: 1px solid #ffb400;
    padding: 5px 10px;
    cursor: pointer;
    border-radius: 5px;
    transition: all 0.3s ease;
}

.time-btn.active,
.time-btn:hover {
    background: #ffb400;
    color: #111;
}

.chart-container {
    height: 250px;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 10px;
}

.last-updated {
    font-size: 0.9rem;
    opacity: 0.7;
    margin-top: 10px;
}

/* Threat Statistics */
.threat-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
    gap: 15px;
    margin: 40px auto;
    max-width: 900px;
}

.stat-box {
    background: rgba(255, 255, 255, 0.05);
    padding: 15px;
    border-radius: 10px;
    text-align: center;
    transition: transform 0.3s ease;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.stat-box:hover {
    transform: translateY(-5px);
}

.stat-box h4 {
    font-size: 1.1rem;
    color: #ffb400;
}

.stat-box p {
    font-size: 1.5rem;
    font-weight: bold;
}

.increase {
    color: #00ff00;
}

.decrease {
    color: #ff3333;
}

/* Global Threat Map */
.global-threat-map {
    background: rgba(255, 255, 255, 0.05);
    padding: 20px;
    border-radius: 10px;
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.map-container {
    height: 250px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 10px;
    margin-top: 15px;
}

.map-warning {
    font-size: 2rem;
    color: #ffb400;
}

.map-placeholder {
    font-size: 1rem;
    opacity: 0.7;
    margin-left: 10px;
}

/* Responsive */
@media (max-width: 768px) {
    .monitoring-header h2 {
        font-size: 2rem;
    }

    .monitoring-header p {
        font-size: 1.1rem;
    }

    .time-filters {
        flex-wrap: wrap;
    }

    .threat-stats {
        grid-template-columns: 1fr;
    }
}


/* Simple Integration Section */
.simple-integration {
    text-align: center;
    padding: 80px 20px;
    background-color: #0d0d0d;
    color: #fff;
}

.integration-header {
    max-width: 700px;
    margin: 0 auto 40px;
}

.highlight-text {
    display: inline-block;
    background: rgba(255, 180, 0, 0.2);
    color: #ffb400;
    padding: 6px 12px;
    font-size: 0.9rem;
    border-radius: 5px;
    font-weight: bold;
    text-transform: uppercase;
}

.integration-header h2 {
    font-size: 2.5rem;
    margin: 10px 0;
}

.integration-header p {
    font-size: 1.2rem;
    opacity: 0.8;
}

/* Steps */
.integration-steps {
    display: flex;
    justify-content: center;
    gap: 30px;
    flex-wrap: wrap;
    margin-top: 40px;
}

.step {
    text-align: center;
    max-width: 220px;
}

.icon {
    position: relative;
    display: inline-block;
    background: rgba(255, 255, 255, 0.1);
    padding: 20px;
    border-radius: 50%;
    font-size: 2rem;
    color: #ffb400;
}

.step-number {
    position: absolute;
    top: -10px;
    right: -10px;
    background: #ffb400;
    color: #111;
    font-size: 0.9rem;
    font-weight: bold;
    width: 24px;
    height: 24px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
}

.step h3 {
    font-size: 1.2rem;
    margin-top: 15px;
    color: #fff;
}

.step p {
    font-size: 0.95rem;
    opacity: 0.8;
}

/* Integration Code Box */
.integration-code {
    background: rgba(255, 255, 255, 0.05);
    padding: 20px;
    border-radius: 10px;
    text-align: left;
    max-width: 700px;
    margin: 40px auto 0;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.code-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 10px;
}

.code-header h4 {
    font-size: 1.1rem;
    color: #ffb400;
}

.copy-btn {
    background: #ffb400;
    color: #111;
    border: none;
    padding: 8px 12px;
    border-radius: 5px;
    font-size: 0.9rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    gap: 5px;
}

.copy-btn i {
    font-size: 1rem;
}

pre {
    background: #111;
    padding: 12px;
    border-radius: 5px;
    overflow-x: auto;
    font-size: 0.95rem;
}

code {
    color: #ffb400;
}

.integration-code p {
    font-size: 0.9rem;
    opacity: 0.7;
    margin-top: 10px;
}

/* Responsive */
@media (max-width: 768px) {
    .integration-header h2 {
        font-size: 2rem;
    }

    .integration-header p {
        font-size: 1.1rem;
    }

    .integration-steps {
        flex-direction: column;
        align-items: center;
    }

    .step {
        max-width: 100%;
    }
}


/* Tailored Solutions Section */
.tailored-solutions {
    text-align: center;
    padding: 80px 20px;
    background-color: #0d0d0d;
    color: #fff;
}

.solutions-header {
    max-width: 700px;
    margin: 0 auto 40px;
}

.highlight-text {
    display: inline-block;
    background: rgba(255, 180, 0, 0.2);
    color: #ffb400;
    padding: 6px 12px;
    font-size: 0.9rem;
    border-radius: 5px;
    font-weight: bold;
    text-transform: uppercase;
}

.solutions-header h2 {
    font-size: 2.5rem;
    margin: 10px 0;
}

.solutions-header p {
    font-size: 1.2rem;
    opacity: 0.8;
}

/* Solutions Grid */
.solutions-grid {
    display: flex;
    justify-content: center;
    gap: 30px;
    flex-wrap: wrap;
    margin-top: 40px;
}

.solution-box {
    background: rgba(255, 255, 255, 0.05);
    padding: 30px;
    border-radius: 10px;
    text-align: center;
    max-width: 250px;
    transition: 0.3s ease-in-out;
}

.solution-box:hover {
    background: rgba(255, 255, 255, 0.1);
}

.icon {
    display: inline-block;
    background: rgba(255, 255, 255, 0.1);
    padding: 15px;
    border-radius: 50%;
    font-size: 1.8rem;
    color: #ffb400;
}

.solution-box h3 {
    font-size: 1.2rem;
    margin-top: 15px;
    color: #fff;
}

.solution-box p {
    font-size: 0.95rem;
    opacity: 0.8;
}

/* Call-to-Action Box */
.cta-box {
    display: flex;
    justify-content: space-between;
    align-items: center;
    background: rgba(255, 255, 255, 0.05);
    padding: 30px;
    border-radius: 10px;
    margin: 40px auto 0;
    max-width: 800px;
    border: 1px solid rgba(255, 255, 255, 0.1);
}

.cta-text {
    text-align: left;
    max-width: 70%;
}

.cta-text h3 {
    font-size: 1.5rem;
}

.cta-text p {
    font-size: 1rem;
    opacity: 0.8;
    margin-top: 10px;
}

.cta-button {
    background: #ffb400;
    color: #111;
    border: none;
    padding: 10px 15px;
    border-radius: 5px;
    font-size: 1rem;
    font-weight: bold;
    cursor: pointer;
    margin-top: 15px;
}

.cta-button:hover {
    background: #e69c00;
}

.cta-stat {
    text-align: center;
}

.accuracy {
    font-size: 2rem;
    font-weight: bold;
    color: #ffb400;
}

.cta-stat p {
    font-size: 0.9rem;
    opacity: 0.7;
}

/* Responsive */
@media (max-width: 768px) {
    .solutions-header h2 {
        font-size: 2rem;
    }

    .solutions-header p {
        font-size: 1.1rem;
    }

    .solutions-grid {
        flex-direction: column;
        align-items: center;
    }

    .solution-box {
        max-width: 100%;
    }

    .cta-box {
        flex-direction: column;
        text-align: center;
        align-items: center;
    }

    .cta-text {
        max-width: 100%;
        text-align: center;
    }
}


/* Contact & Support Section */
.contact-support {
    text-align: center;
    padding: 80px 20px;
    background-color: #0d0d0d;
    color: #fff;
}

.contact-header {
    max-width: 700px;
    margin: 0 auto 40px;
}

.highlight-text {
    display: inline-block;
    background: rgba(255, 180, 0, 0.2);
    color: #ffb400;
    padding: 6px 12px;
    font-size: 0.9rem;
    border-radius: 5px;
    font-weight: bold;
    text-transform: uppercase;
}

.contact-header h2 {
    font-size: 2.5rem;
    margin: 10px 0;
}

.contact-header p {
    font-size: 1.2rem;
    opacity: 0.8;
}

/* Contact Container */
.contact-container {
    display: flex;
    justify-content: center;
    gap: 30px;
    flex-wrap: wrap;
    max-width: 1000px;
    margin: auto;
}

/* Contact Form */
.contact-form {
    background: rgba(255, 255, 255, 0.05);
    padding: 30px;
    border-radius: 10px;
    max-width: 500px;
    text-align: left;
    flex: 1;
}

.contact-form h3 {
    font-size: 1.5rem;
    margin-bottom: 20px;
}

.form-group {
    display: flex;
    gap: 10px;
}

.form-group input,
.contact-form select,
.contact-form textarea {
    width: 100%;
    padding: 12px;
    margin: 10px 0;
    background: rgba(255, 255, 255, 0.1);
    border: none;
    color: #fff;
    border-radius: 5px;
}

.contact-form textarea {
    min-height: 120px;
    resize: none;
}

.send-message {
    background: #ffb400;
    color: #111;
    border: none;
    padding: 12px 20px;
    border-radius: 5px;
    font-size: 1rem;
    font-weight: bold;
    cursor: pointer;
    margin-top: 15px;
    width: 100%;
}

.send-message:hover {
    background: #e69c00;
}

/* Support Options */
.support-options {
    display: flex;
    flex-direction: column;
    gap: 20px;
    max-width: 350px;
    flex: 1;
}

.support-box {
    background: rgba(255, 255, 255, 0.05);
    padding: 20px;
    border-radius: 10px;
    text-align: left;
    transition: 0.3s ease-in-out;
}

.support-box i {
    font-size: 1.8rem;
    color: #ffb400;
}

.support-box h4 {
    margin: 10px 0;
    font-size: 1.2rem;
}

.support-box p {
    font-size: 0.95rem;
    opacity: 0.8;
}

.support-box a {
    color: #ffb400;
    text-decoration: none;
    font-weight: bold;
}

.support-box:hover {
    background: rgba(255, 255, 255, 0.1);
}

/* Responsive */
@media (max-width: 768px) {
    .contact-header h2 {
        font-size: 2rem;
    }

    .contact-header p {
        font-size: 1.1rem;
    }

    .contact-container {
        flex-direction: column;
        align-items: center;
    }

    .form-group {
        flex-direction: column;
    }

    .contact-form,
    .support-options {
        max-width: 100%;
    }

    .support-box {
        text-align: center;
    }
